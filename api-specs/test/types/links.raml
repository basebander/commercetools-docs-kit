#%RAML 1.0 Library
usage: External link test type.

uses:
  scalars: scalars.raml
  overrides: type-overrides.raml

types:
  LinkToTypeOnSameSite:
    properties:
      LinkToTypeOnSameSite:
        description: A link pointing to a type the same microsite.
        type: scalars.StringTestType
  LinkToTypeOnAnotherSite:
    properties:
      LinkToTypeOnAnotherSite:
        description: A link pointing to a type in another microsite.
        type: overrides.TestTypeOnAnotherMicrosite
  LinkToTypeOnExternalSite:
    properties:
      LinkToTypeOnExternalSite:
        description: A link pointing to a type in an external website.
        type: overrides.TestTypeOnAnExternalWebsite
  LinkFromDescription:
    description: |-
      Link [ArrayTestType](/types/general#ctp:test:type:ArrayTestType) with `[ArrayTestType](/types/general#ctp:test:type:ArrayTestType)`
    properties:
      linkFromPropertyDescription:
        description: |-
          From property description, link [ArrayTestType](/types/general#ctp:test:type:ArrayTestType) with `[ArrayTestType](/types/general#ctp:test:type:ArrayTestType)`
        type: string
      linkWithMicrositeNotation:
        description: |-
          Link using microsite notation with `[Text](/../<microsite-name>/path#ctp:<api-name>:type:<type-name>)`
        type: string
      linkWithAbsoluteURL:
        description: |-
          Link using full path with `[Text](https://example.com/path#ctp:<api-name>:type:<type-name>)`
        type: string
